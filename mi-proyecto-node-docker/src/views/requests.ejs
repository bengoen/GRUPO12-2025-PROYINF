<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Mis Solicitudes</title>
  <%- include('partials/head') %>
  <style>
    .wrap { max-width: 960px; margin: 24px auto; padding: 0 16px; }
    .card { border:1px solid #ddd; border-radius:10px; padding:14px; margin:12px 0; }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <main class="wrap">
    <h1>Mis solicitudes</h1>
    <div class="mb-2">
      <label>Applicant ID:</label>
      <input id="aid" type="number" min="1" style="width:120px" />
      <button class="btn btn-sm btn-primary" onclick="loadList()">Buscar</button>
    </div>
    <div id="req-list"></div>
  </main>

  <%- include('partials/footer') %>

  <script>
    function humanStatus(code) {
      switch (code) {
        case 'PENDING_EVAL': return 'Pendiente de evaluaciÃ³n';
        case 'APPROVED': return 'Aprobado';
        case 'REJECTED': return 'Rechazado';
        case 'CONTRACT_PENDING': return 'Falta firmar contrato';
        case 'CONTRACT_SIGNED': return 'Contrato firmado';
        case 'ACTIVE': return 'Activo';
        case 'DISBURSED': return 'Desembolsado';
        default: return code || '';
      }
    }

    async function updateStatus(id, status) {
      try {
        const res = await fetch(`/api/loan-requests/${id}/status`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status })
        });
        if (!res.ok) {
          const data = await res.json().catch(() => ({}));
          alert('No se pudo actualizar el estado: ' + (data.error || res.status));
        } else {
          await loadList();
        }
      } catch (e) {
        console.error(e);
        alert('Error de red al actualizar el estado');
      }
    }

    async function loadList() {
      const input = document.getElementById('aid');
      const params = new URLSearchParams(location.search);
      const fromQuery = params.get('applicantId');
      let applicantId = input && input.value ? Number(input.value) : null;
      if (!applicantId && fromQuery) applicantId = Number(fromQuery);
      if (!applicantId || !Number.isFinite(applicantId)) {
        try {
          const stored = localStorage.getItem('applicantId');
          if (stored) applicantId = Number(stored);
        } catch (_) {}
      }
      if (!applicantId || !Number.isFinite(applicantId)) applicantId = 1;

      const res = await fetch(`/api/loan-requests?applicantId=${applicantId}`);
      const data = await res.json();
      const el = document.getElementById('req-list');
      el.innerHTML = (Array.isArray(data) && data.length ? data : []).map(r => `
        <div class="card">
          <div><b>ID:</b> ${r.id}</div>
          <div><b>Monto:</b> ${r.amount}</div>
          <div><b>Plazo:</b> ${r.term} meses</div>
          <div><b>Estado:</b> ${humanStatus(r.status)}</div>
          <a class="btn btn-link p-0" href="/requests/${r.id}">Ver detalle</a>
          ${r.status === 'APPROVED' || r.status === 'CONTRACT_PENDING'
            ? `<br/><a class="btn btn-link p-0" href="/requests/${r.id}/contract">Revisar y firmar contrato</a>`
            : ''}
          ${r.status === 'ACTIVE' || r.status === 'DISBURSED'
            ? `<br/><a class="btn btn-link p-0" href="/my-loans?applicantId=${encodeURIComponent(applicantId)}">Ver pr&eacute;stamo activo</a>`
            : ''}
          <div class="mt-2">
            <button class="btn btn-success btn-sm me-1" onclick="updateStatus(${r.id}, 'APPROVED')">Aceptar</button>
            <button class="btn btn-danger btn-sm" onclick="updateStatus(${r.id}, 'REJECTED')">Rechazar</button>
          </div>
        </div>
      `).join('') || '<p>(Sin solicitudes para este applicant)</p>';
    }
    document.addEventListener('DOMContentLoaded', () => {
      const params = new URLSearchParams(location.search);
      let applicantId = params.get('applicantId');
      if (!applicantId) {
        try {
          const stored = localStorage.getItem('applicantId');
          if (stored) applicantId = stored;
        } catch (_) {}
      }
      if (!applicantId) applicantId = 1;
      const input = document.getElementById('aid');
      if (input) input.value = applicantId;
      loadList();
    });
  </script>
</body>
</html>

